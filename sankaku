using System;
using System.Collections.Generic;
using System.Text;


    class Triangle
    {
        private float width;   
        private float height;

        public Triangle(float w, float h)
        {
            this.width = w;
            this.height = h;
        }
        public float GetSurface()
        {
            return (width * height / 2);
        }
    } 
